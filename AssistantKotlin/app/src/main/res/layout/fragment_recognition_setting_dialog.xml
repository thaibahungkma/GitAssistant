<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/HeaderDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select language"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <RadioGroup
        android:id="@+id/radioGroupRecognitionSetting"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/HeaderDialog"
        app:layout_constraintRight_toRightOf="parent">
        <RadioButton
            android:id="@+id/rdBtnEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/rdBtnVietnamese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vietnamese"
            android:textColor="@color/white"/>

    </RadioGroup>
    <Button
        android:id="@+id/cancelRecognitionBtn"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupRecognitionSetting"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:textColor="@color/white"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#E91E63"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/applyRecognitionBtn"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupRecognitionSetting"
        android:layout_width="wrap_content"
        android:text="Apply"
        android:textColor="@color/white"
        android:backgroundTint="#3F51B5"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>